@model NewsItem
@using PlataformaBjj.Utility

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!--===================== S-NEWS =====================-->
<section class="s-news">
    <div class="container">
        <div class="row">
            <div class="col-12 col-lg-9 blog-cover">
                <div class="post-item-cover">
                    <div class="post-header">
                        <div class="post-thumbnail">
                            <img src="@Model.Image" alt="img">
                        </div>
                    </div>
                    <div class="post-content">
                        <div class="meta">
                            <span class="post-by"><i class="fa fa-user" aria-hidden="true"></i><a href="#">Legion BJJ</a></span>
                            <span class="post-date"><i class="fa fa-calendar" aria-hidden="true"></i>@Model.UploadDate.ToShortDateString()</span>
                            <span class="post-category"><i class="fa fa-tag" aria-hidden="true"></i><a href="#">@Model.Type</a></span>
                        </div>
                        <h2 class="title">@Model.Title</h2>
                        <div class="text">
                            <p>@Html.Raw(Model.Description)</p>
                            <p></p>
