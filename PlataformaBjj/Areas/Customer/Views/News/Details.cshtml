                        </div>
                    </div>
                    <a style="margin-right:0.5rem;" class="btn btn-danger" asp-action="Index">Regresar</a>
                    @if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.SuperUser))
                    {
                        <a style="margin-right:0.5rem;" class="btn btn-success" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
                        <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@Model.Id">Borrar</a>


                    }
                   
                </div>
                
        


        </div>
    </div>
    </div>
</section>
