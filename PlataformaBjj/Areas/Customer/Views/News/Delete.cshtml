@model NewsItem
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h1 class="text-white-50">Editar noticia</h1>
<br />
<br />
<form method="post" asp-action="Delete" enctype="multipart/form-data">
    <fieldset disabled>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Title" class="col-form-label"></label>
            </div>
            <div class="col-lg-10 col-md-8">
                <input asp-for="Title" class="form-control" />
            </div>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Type" class="col-form-label"></label>
            </div>
            <div class="col-lg-10 col-md-8">
                <input asp-for="Type" class="form-control" />
            </div>
            <span asp-validation-for="Type" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-lg-10 col-md-8">
                @Html.Raw(Model.Description)
            </div>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="col-form-label"></label>
            </div>
            <div class="col-lg-10 col-md-8">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>
    </fieldset>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Borrar" class="btn btn-danger" style="margin-top:8px;" /> |
            <a asp-action="Index">Regresar</a>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>




    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

