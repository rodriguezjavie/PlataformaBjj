@model PlataformaBjj.Models.Phrases
@using PlataformaBjj.Extensions


@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white-50">Agregar Frase</h2>
<br />

<form method="post" asp-action="Create" enctype="multipart/form-data">
    <div class="backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Author" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Author" class="form-control" />
            </div>
            <span asp-validation-for="Author" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Phrase" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.Phrase)
            </div>
            <span asp-validation-for="Phrase" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Image" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input type="file" name="files" multiple class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-5 offset-3">
                <input type="submit" value="Crear" class="btn btn-danger" style="margin-top:8px;" /> |
                <a asp-action="Index">Regresar</a>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>




    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}