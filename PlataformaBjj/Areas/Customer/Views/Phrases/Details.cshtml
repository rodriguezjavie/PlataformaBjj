@model PlataformaBjj.Models.Phrases

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white-50">Borrar Frase</h2>
<br />

    <div class="backgroundWhiteBorder row">
        <div class="col-8">
            <input type="hidden" asp-for="Id" />
            <fieldset disabled>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Author" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Author" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Phrase" class="custom-label"></label>
                    </div>
                    <div class="col-8">
                        @Html.Raw(Model.Phrase)
                    </div>
                </div>


            </fieldset>
        </div>
        <div class="col-1"></div>
        <div class="col-3">
            <img src="@Model.Image" width="100%" style="border-radius:5px;border:1px solid #bbb9b9;" />
        </div>
        <div>
            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
            <a class="btn btn-secondary" asp-action="Index">Regresar</a>
        </div>

