@page
@model RegisterModel
@using PlataformaBjj.Extensions
@using PlataformaBjj.Utility
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
</br>
<h2>Crear nueva cuenta</h2>
</br>
<div class="row">
    <div class="col-lg-10 col-md-8 col-sm-8 offset-1" style="margin-right:0.5rem;">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Crear una nueva cuenta.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="Input.Name" class="col-form-label"></label>
                <input asp-for="Input.Name" class="form-control" />
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.LastName" class="col-form-label"></label>
                <input asp-for="Input.LastName" class="form-control" />
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.PhoneNumber" class="col-form-label"></label>
                <input asp-for="Input.PhoneNumber" class="form-control" type="tel" />
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            
            <div class="form-group row">
                <label asp-for="Input.Email" class="col-form-label"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.Password" class="col-form-label"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Input.ConfirmPassword" class="col-form-label"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="display:flex">
                <div style="margin:0 0.5rem;">
                    @if (User.IsInRole(SD.SuperUser))
                    {
                        <input type="radio" name="rdUserRole" value="@SD.SuperUser" /> @SD.SuperUser
                        <input type="radio" name="rdUserRole" value="@SD.ManagerUser" style="margin-left:0.5rem" /> @SD.ManagerUser
                        <input type="radio" name="rdUserRole" value="@SD.CustomerUser" style="margin-left:0.5rem" checked /> @SD.CustomerUser
                    }
                </div>
            </div>
            </br>
            <button type="submit" class="btn btn-primary" style="margin-top:1.5rem;">Register</button>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
