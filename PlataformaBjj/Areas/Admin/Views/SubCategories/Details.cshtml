@model PlataformaBjj.Models.SubCategory
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<br />
<h2 class="text-white-50">Detalles de Sub Categoria</h2>
<br />
<div class="backgroundWhite rounded">
    <fieldset disabled>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" class="form-control" style="color: #495057;" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Category.Name" class="custom-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Category.Name" class="form-control" style="color: #495057;" />
            </div>
        </div>
    </fieldset>
    <br />
    <div class="form-group row">
        <div class="col-5 offset-2">
            <a class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Editar</a> |
            <a asp-action="Index">Regresar</a>

        </div>
    </div>
</div>