@model PlataformaBjj.Models.ViewModels.VideoItemVM
@using PlataformaBjj.Utility
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white-50">Detalles del Video</h2>
<br />

<div class="backgroundWhiteBorder row">
    <iframe width="100%" height="630" src="https://player.vimeo.com/video/@Model.VideoItem.URL" title=@Model.VideoItem.Title frameborder="0"  allowfullscreen></iframe>
    <div class="col-8">
        <fieldset disabled>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VideoItem.Title" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @*<input asp-for="VideoItem.Title" class="form-control" />*@
                    @Html.Raw(Model.VideoItem.Title)

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VideoItem.Description" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.VideoItem.Description)
                </div>
            </div>

            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VideoItem.CategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.VideoItem.Category.Name)
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VideoItem.SubCategoryId" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.VideoItem.SubCategory.Name)

                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="VideoItem.UploadDate" class="custom-label"></label>
                </div>
                <div class="col-8">
                    @Html.Raw(Model.VideoItem.UploadDate)

                </div>
            </div>
        </fieldset>
    </div>

    <div class="col-8">
        <div class="col-10 offset-4" style="display:flex; justify-content:space-evenly;">
            <a style="margin-right:0.5rem;" class="btn btn-danger" asp-action="Index">Regresar</a>
            @if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.SuperUser))
            {
                <a style="margin-right:0.5rem;" class="btn btn-success" asp-action="Edit" asp-route-id="@Model.VideoItem.Id">Editar</a>
                <a class="btn btn-secondary" asp-action="Delete" asp-route-id="@Model.VideoItem.Id">Borrar</a>


            }


        </div>
    </div>
</div>
@section Scripts{
    <script>
            tinymce.init({
                selector: 'textarea',
                plugins: "lists",
                toolbar: "undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist",
                menubar: 'file edit format',
                readonly: 1
            });</script>
    <script>tinymce.init({ selector: 'textarea' });</script>

}