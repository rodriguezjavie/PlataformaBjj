@model PlataformaBjj.Models.ViewModels.EmailVM
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Enviar Correo</h1>

<form method="post" asp-action="SendEmail" enctype="multipart/form-data">
    <div class="backgroundWhite">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email.EmailAddress" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email.EmailAddress" class="form-control" />
            </div>
            <span asp-validation-for="Email.EmailAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email.EmailSubject" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email.EmailSubject" class="form-control" />
            </div>
            <span asp-validation-for="Email.EmailSubject" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email.EmailMessage" class="col-form-label"></label>
            </div>
            <div class="col-5">
                @Html.TextAreaFor(m => m.Email.EmailMessage)
            </div>
            <span asp-validation-for="Email.EmailMessage" class="text-danger"></span>
        </div>
        <div class=" offset-2">
            <div class="row">
                <div class="form-group">
                    <div class="col-2">
                        <label asp-for="AllUsers" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="AllUsers" class="form-check" />
                    </div>
                </div>
                @*<div class="form-group row">
                    <div class="col-2">
                        <label asp-for="Payment" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Payment" class="form-check" />
                    </div>
                </div>*@

                <div class="form-group">
                    <div class="col-2">
                        <label asp-for="Students" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Students" class="form-check" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-2">
                        <label asp-for="Profesors" class="col-form-label"></label>
                    </div>
                    <div class="col-5">
                        <input asp-for="Profesors" class="form-check" />
                    </div>
                </div>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-3">
                <input type="submit" value="Enviar correo" class="btn btn-danger" style="margin-top:8px;" /> |
                <a asp-action="Index">Regresar</a>
            </div>
        </div>

    </div>
</form>

@section Scripts{
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: "lists",
            menubar: 'file edit format'
        });
    </script>
}



