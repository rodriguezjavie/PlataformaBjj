@model Email
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-white-50">Detalles Email</h2>
<br />

    <div class="backgroundWhite">
        <fieldset disabled>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="EmailSubject" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    <input asp-for="EmailSubject" class="form-control" />
                </div>
                <span asp-validation-for="EmailSubject" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="TemplateKey" class="col-form-label"></label>
                </div>
                <div class="col-5">
                    @Html.Raw(Model.TemplateKey)
                </div>
            </div>

            </fieldset>
            <div class="form-group row">
                <div class="col-5 offset-3">
                    <a style="margin-right:0.5rem;" class="btn btn-danger" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>              
                    <a asp-action="Index">Regresar</a>
                </div>
            </div>
    </div>


